@charset "utf-8";
html,
body,
div,
p,
span,
a,
img,
ul,
li,
b,
i,
dl,
dt,
dd {
  margin: 0 auto;
  padding: 0;
  box-sizing: border-box;
}
.FlexBlock {
  display: flex;
  display: -webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
}
.flex1 {
  flex: 1;
}
html,
body {
  width: 100%;
  min-width: 1366px;
  height: 100%;
  box-sizing: content-box;
  overflow: hidden;
}
p,
img {
  margin: 0;
  padding: 0;
}
a {
  text-decoration: none;
  color: #3f3f3f;
}
body {
  font-family: "Microsoft YaHei";
  font-size: 14px;
  flex-direction: column;
}
.header {
  width: 100%;
  height: 120px;
}
.header .HeaderMain {
  width: 72%;
  margin: 0 auto;
  height: 100%;
}
.header img {
  width: 676px;
  height: auto;
  margin-top: 26px;
}
.main {
  flex: 1;
  width: 100%;
  padding: 0 12%;
  background: url('../img/bg.png') no-repeat;
  background-size: 100% 100%;
}
.main .CenterCon {
  width: 100%;
  height: 456px;
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}
.footer {
  height: 46px;
  line-height: 44px;
  text-align: center;
  color: #666;
}
.ThemeBox {
  max-width: 701px;
  width: 100%;
  height: 100%;
  background: url('../img/left_pic1.png') no-repeat;
  background-size: 100% 100%;
  position: absolute;
  left: 0;
}
.LoginContent {
  width: 434px;
  height: 438px;
  margin: auto 0;
  background: #ffffff;
}
.LoginContent .LoginArea {
  height: 392px;
  z-index: 999;
  border-radius: 3px;
  padding: 23px 12px 15px 12px;
}
.LoginContent .LoginArea .InputP {
  width: 320px;
  height: 50px;
  line-height: 48px;
  border: 1px solid #c9c9c9;
  border-radius: 3px;
  font-size: 18px;
  text-indent: 46px;
}
.LoginContent .LoginArea .InputP input {
  width: 250px;
  border: none;
  height: 25px;
  line-height: 25px;
  border-left: 1px solid #dbdbdb;
  text-indent: 8px;
}
.LoginContent .LoginArea p {
  margin-left: 40px;
}
.LoginContent .LoginArea .UserDiv {
  height: 127px;
  padding-top: 43px;
}
.LoginContent .LoginArea .PasswordDiv {
  min-height: 72px;
}
.LoginContent .LoginArea .user {
  background: url(../img/user.png) center left no-repeat;
}
.LoginContent .LoginArea .password {
  background: url(../img/password.png) center left no-repeat;
}
.LoginContent .LoginArea .InputP.active,
.LoginContent .LoginArea .InputP:hover {
  border: 1px solid #6bb384;
}
.LoginContent .LoginArea .InputP.active input,
.LoginContent .LoginArea .InputP:hover input {
  border-left: 1px solid #6bb384;
}
.LoginContent .LoginArea .user:hover {
  background: url(../img/user_on.png) center left no-repeat;
}
.LoginContent .LoginArea .password:hover {
  background: url(../img/password_on.png) center left no-repeat;
}
.LoginContent .LoginHeader {
  width: 100%;
  height: 10%;
  margin: 0 auto;
  background: url(../img/logo.png) center left no-repeat;
}
.LoginContent .LoginName {
  font-size: 20px;
  text-indent: 30px;
  height: 27px;
  line-height: 25px;
  background: url(../img/2.png) repeat-x;
}
.LoginContent .LoginTitle {
  padding: 0 10px;
  background: #ffffff;
  color: #3B3C3C;
}
.LoginContent .HelpBlock {
  font-size: 14px;
  height: 34px;
  line-height: 32px;
  color: #ff431f;
  display: none;
  margin-left: 98px!important;
}
.LoginContent .InputP.error {
  border: 1px solid red;
}
.LoginContent .HelpBlock.error {
  display: block;
}
.border {
  border: 1px solid red;
}
.CheckBox {
  display: inline-block;
  position: relative;
  width: 20px;
  height: 21px;
  top: 4px;
  background: url(../img/rdo.png) no-repeat;
}
.CheckBox.active {
  background: url(../img/rdo_on.png) no-repeat;
}
input::-webkit-input-placeholder {
  /* placeholder颜色  */
  color: #d6d6d6;
}
input::-internal-autofill-selected {
  background-color: #fff!important;
}
.RemeberPass {
  margin-left: 1px;
  color: #7b7b7b;
}
.RadioDiv {
  min-height: 54px;
}
.remember {
  margin-top: 23px;
  width: 120px;
  height: 48px;
  line-height: 50px;
  border: 1px solid #c9c9c9;
  border-radius: 3px;
  font-size: 18px;
  text-indent: 10px;
}
.yzm {
  line-height: 50px;
  position: relative;
}
.yzm img {
  width: 27%;
  position: absolute;
  left: 183px;
  top: 15px;
}
.LoginBtn {
  width: 320px;
  height: 50px;
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
  margin-top: 6px;
}
.LoginBtn button {
  width: 100%;
  border: none;
  cursor: pointer;
  background: #ffb400;
  color: #fff;
  font-size: 20px;
  height: 50px;
  line-height: 48px;
  border-radius: 3px;
}
.LoginBtn button:first-child {
  background: #6bb384;
  width: 100%;
  letter-spacing: 5px;
}
.content {
  background: rgba(0, 0, 0, 0.1);
  zoom: 1;
}
.content:after {
  content: '.';
  width: 0;
  height: 0;
  display: block;
  visibility: hidden;
  clear: both;
}
/*登录添加*/
.LoginArea input {
  font-family: "microsoft yahei";
}
.LoginArea input:focus {
  outline: medium;
}
.LoginArea input::-ms-clear {
  display: none;
}
/*注册*/
.register {
  width: 905px;
  height: auto;
  overflow: hidden;
  background: url(../img/register_bg.png) no-repeat;
  z-index: 9999;
  margin: 0 auto;
  top: 10%;
  position: absolute;
  left: 18%;
  display: none;
}
.register_con {
  overflow: hidden;
  margin: 20px;
  background: #fff;
  padding: 15px 20px;
}
.title {
  font-size: 18px;
  color: #1b74e2;
  font-weight: bold;
  border-bottom: solid 1px #2786d6;
  padding-bottom: 10px;
  text-indent: 10px;
}
.SuggestDiv {
  margin: 0 0 0 54px;
  color: #7b7b7b;
}
.shu {
  width: 4px;
  height: 15px;
  background: #295fcb;
  display: inline-block;
  margin-right: 10px;
}
.fr {
  float: right;
}
.margin_right_10 {
  margin-right: 10px;
}
.margin_bottom_100 {
  margin-bottom: 100px;
}
.margin_bottom_120 {
  margin-bottom: 120px;
}
.margin_bottom_30 {
  margin-bottom: 30px;
}
.overflow {
  overflow: hidden;
}
